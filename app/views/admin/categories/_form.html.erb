 <%= form_for [:admin, category], html: {role: "form", :class => 'validate well form-horizontal' } do |f| %>
  <%= html_errors category %>
  <fieldset>
    <h3 class="col-lg-offset-2"><%= title %></h3>
    <div class="form-group">
    <%= f.label :name, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control', data: {rules: {required: true}} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label for='category_is_expense'>
          <%= f.check_box :is_expense %>
          Use for <strong>Expense</strong>
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label for='category_is_personal_expense'>
          <%= f.check_box :is_personal_expense %>
          Use for <strong>Personal Expense</strong>
        </label>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-default', data: {disable_with: "Please wait, saving..."} %>
      <%= link_to "<< Categories", admin_categories_path, class: "btn btn-primary" %>
    </div>
  </div>
  </fieldset>
<% end %>
