<%= form_for [:admin, user], html: { class: 'form-horizontal validate' } do |f| %>
  <%= html_errors @user %>
  <fieldset>
    <h3 class="col-lg-offset-2"><%= heading %></h3>
    <div class="form-group">
      <%= f.label :email, :class => 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :first_name, :class => 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :first_name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, :class => 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :last_name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :username, :class => 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :username, :class => 'form-control' %>
      </div>
    </div>
    <%- unless user.is_admin %>
      <div class="form-group">
        <%= f.label :group_id, :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.select :group_id, Group.select("id, name").collect {|p| [ p.name, p.id ] }, {}, class: 'form-control' %>
        </div>
      </div>
    <% end %>
    <%- if @user.new_record? %>
      <div class="form-group">
        <%= f.label :password, :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= submit_tag nil, class: 'btn btn-default', data: {disable_with: "Please wait, saving..."} %>
        <%= link_to "<< Back to Users", admin_users_path, class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
