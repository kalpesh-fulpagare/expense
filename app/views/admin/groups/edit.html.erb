<%= form_for [:admin, @group], :html => {role: "form", :class => 'validate well form-horizontal' } do |f| %>
  <%= html_errors @group %>
  <fieldset>
    <h3 class="col-lg-offset-2">Edit Group details</h3>
    <div class="form-group">
      <%= f.label :name, :class => 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control", data: {rules: {required: true}} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit "Rename Group", class: 'btn btn-default', data: {disable_with: "Please wait, saving..."} %>
        <%= link_to "<< Groups", admin_groups_path, class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>