<%- model_class = Group -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @group.name %></dd>
  <dt><strong>Users:</strong></dt>
  <dd>
    <%- @users.each do |u| %>
      <%= link_to(display_name(u), u) %><br>
    <% end %>
  </dd>
</dl>
<div class="form-group well">
  <a href="/groups" class="btn btn-default btn-sm">Back</a>
  <a href="/groups/<%= @group.id %>/edit" class="btn btn-default btn-sm">Edit</a>
  <a href="/groups/<%= @group.id %>" class="btn btn-sm btn-danger" data-confirm="Are you sure?" data-method="delete" rel="nofollow">Delete</a>
</div>
