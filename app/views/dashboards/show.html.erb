Welcome  <strong><%= display_name current_user %> </strong>
<%- model_class = Expense -%>
<div class="page-header">
  <h4>Expenses for the Month</h4>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Purchased by</th>
      <th>Cost</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= link_to expense.id, expense_path(expense) %></td>
        <td><%= expense.title %></td>
        <td><%= expense.description %></td>
        <td><%= expense.category.try(:name) %></td>
        <td><%= display_name expense.user %></td>
        <td><%= expense.cost %></td>
        <td><%= expense.date.try(:strftime, "%d-%b-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add new Expense", new_expense_path, :class => 'btn btn-primary btn-sm' %>
