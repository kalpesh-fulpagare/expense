Welcome  <strong><%= display_name current_user %> </strong>
<%= link_to "Add new Expense", new_expense_path, :class => 'btn btn-primary btn-sm pull-right' %>
<div class="page-header">
  <h4>Expenses for last 3 Months</h4>
</div>
<table class="table table-striped table-bordered" id="expensesTable">
  <thead>
    <tr class="thHeads">
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Purchased by</th>
      <th>Date</th>
      <th>Cost</th>
    </tr>
  </thead>
</table>
<%= content_for :right_sidebar do %>
  <%= render "shared/filter" %>
<% end %>
<%= content_for :js do %>
  <%= javascript_include_tag "dashboard" %>
  <script type="text/javascript">
    users_json = <%= @users.group_by(&:id).to_json.html_safe %>
    categories_json = <%= @categories.group_by(&:id).to_json.html_safe %>
    expenses_json = <%= @expenses.to_json.html_safe %>
  </script>
<% end %>