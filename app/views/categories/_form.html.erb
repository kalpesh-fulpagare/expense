<%- content_for :title, "Add new Expense" %>

<%= form_for @category, remote: true, :html => {role: "form", :class => 'form-horizontal' } do |f| %>
  <%= html_errors @category %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :is_expense %>
          Use for <strong>Expense</strong>
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :is_personal_expense %>
          Use for <strong>Personal Expense</strong>
        </label>
      </div>
    </div>
  </div>


  <div class="form-group well">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-default', disable_with: "Please wait, saving..." %>
      <a href="/categories" class="btn">Cancel</a>
    </div>
  </div>
<% end %>
