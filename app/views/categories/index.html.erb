<div class="panel panel-default">
  <div class="panel-heading">
    Categories
    <a href="/categories/new" class="pull-right">Create new category</a>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th></th>
          <th></th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.id, edit_category_path(category) %></td>
            <td><%= category.name %></td>
            <td>
              <%= link_to "View expenses", categorize_expense_path(category), class: "btn btn-xs btn-info" if category.is_expense %>
              <%= link_to "View personal expenses", categorize_personal_expense_path(category), class: "btn btn-xs btn-info" if category.is_personal_expense %>
            <td>
              <label class='label label-info'><%= t("expense_#{category.is_expense}") %></label>
              <label class='label label-success'><%= t("personal_expense_#{category.is_personal_expense}") %></label>
            </td>
            <td>
              <a href="/categories/<%= category.id %>/edit" class="btn-default btn btn-sm">Edit</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= content_for :active_tab, "admin" %>
