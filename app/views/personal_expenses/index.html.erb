<div class="page-header">
  <h3>Personal expenses</h3>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @personal_expenses.each do |expense| %>
      <tr>
        <td><%= link_to expense.id, personal_expense_path(expense) %></td>
        <td><%= expense.title %></td>
        <td><%= expense.description %></td>
        <td><%= expense.category.try(:name) %></td>
        <td><%= expense.cost %></td>
        <td><%= expense.date.try(:strftime, "%d %b, %Y") %></td>
        <td>
          <a href="/personal_expenses/<%= expense.id %>/edit" class="btn btn-default btn-sm">Edit</a>
          <a href="/personal_expenses/<%= expense.id %>" class="btn btn-sm btn-danger" data-confirm="Are you sure?" data-method="delete" rel="nofollow">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @personal_expenses %>
<%= link_to "Add new personal expense", new_personal_expense_path, :class => 'btn btn-primary' %>
<%= content_for :js do %>
  <%= javascript_include_tag "personal_expenses" %>
<% end %>