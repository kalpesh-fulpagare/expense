<div class="page-header">
  <h4>Personal expenses for last three months</h4>
</div>
<table class="table table-striped table-bordered" id="expensesTable">
  <thead>
    <tr class="thHeads">
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Date</th>
      <%- if current_user.is_admin %>
        <th>User</th>
      <% end %>
      <th>Cost</th>
    </tr>
  </thead>
</table>
<%= content_for :right_sidebar do %>
  <%= render "shared/filter" %>
<% end %>
<%= link_to "Add new personal expense", new_personal_expense_path, :class => 'btn btn-primary' %>
<%= content_for :js do %>
  <%= javascript_include_tag "personal_expenses" %>
  <script type="text/javascript">
    categories_json = <%= @categories.group_by(&:id).to_json.html_safe %>
    expenses_json = <%= @personal_expenses.to_json.html_safe %>
    users_json = <%= @users.group_by(&:id).to_json.html_safe if @users %>
    is_admin = <%= current_user.is_admin %>
  </script>
<% end %>