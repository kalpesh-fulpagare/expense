<div class="page-header">
  <h3>Expenses</h3>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Purchased by</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= link_to expense.id, expense_path(expense) %></td>
        <td><%= expense.title %></td>
        <td><%= expense.description %></td>
        <td><%= expense.category.try(:name) %></td>
        <td><%= display_name expense.user %></td>
        <td><%= expense.cost %></td>
        <td><%= expense.date.try(:strftime, "%d-%b-%Y") %></td>
        <td>
          <%- if current_user_has_access_of? expense %>
            <a href="/expenses/<%= expense.id %>/edit" class="btn btn-default btn-sm">Edit</a>
          <% end %>
          <%- if current_user.is_admin %>
            <a href="/expenses/<%= expense.id %>" class="btn btn-sm btn-danger" data-confirm="Are you sure?" data-method="delete" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @expenses %>
<%= link_to t('.new', :default => t("helpers.links.new")), new_expense_path, :class => 'btn btn-primary' %>
